<?xml version="1.0"?>

<project name="Xponents" default="test-default">

    	
  <path id="runtime.classpath">
    <pathelement location="${basedir}/src/main/resources" />
    <pathelement location="${basedir}/src/test/resources" />
    <fileset dir="${basedir}/lib" includes="**/*.jar" />
    <fileset dir="${basedir}/build" includes="**/*.jar" />
  </path>

    <!--

    XCoord testing tasks and properties.

    -->

    <property name="xcoord_test_data" value = "${basedir}/src/test/resources/Coord_Patterns_Truth_Text.txt" />

    <target name="xcoord" description="Template for Running an XCoord module" >
        <input message="file?" addproperty="get.file"/>
        <java classname="org.mitre.xcoord.XCoord" classpathref="runtime.classpath" fork="yes" >
            <arg value="-u" />
            <arg value="${get.file}" />
        </java>
    </target>

    <target name="test-xcoord" description="Default tests for XCoord " depends="">
        <java classname="org.mitre.xcoord.XCoord" classpathref="runtime.classpath" fork="yes" >
            <arg value="-f" />
            <arg value="${xcoord_test_data}" />
        </java>
    </target>

    <target name="xcoord-by-line" description="Specialized Coordinate tests for XCoord " depends="">
        <input message="file?" addproperty="get.file"/>
        <java classname="org.mitre.xcoord.XCoord" classpathref="runtime.classpath" fork="yes" >
            <arg value="-t" />
            <arg value="${get.file}" />
        </java>
    </target>

    <!--

    XTemporal testing tasks and properties.

    -->

  <!-- sample test document with variety of truth dates does not exist yet.  -->
  <property name="xtemp_test_data" value = "${basedir}/src/test/resources/Date_Patterns_2012.txt " />

  <target name="test" description="Template for Running a module" depends="">
    <input message="file?" addproperty="get.file"/>
    <java classname="org.mitre.xtemporal.XTemporal" classpathref="runtime.classpath" fork="yes" >
      <arg value="${get.file}" />
    </java>
  </target>


  <target name="test-default" description="Default tests for XTemp " depends="">
    <java classname="org.mitre.xtemporal.XTemporal" classpathref="runtime.classpath" fork="yes" >
      <arg value="-f" />
      <!--
      <arg value="${xtemp_test_data}" />
      -->
    </java>
  </target>



    <!--
    
    PoLi testing tasks and properties.
    
    -->
	
  <target name="poli" description="Run user file against PoLi" depends="">
    <java classname="org.mitre.opensextant.poli.PatternsOfLife" classpathref="runtime.classpath" fork="yes" >
      <arg value="-f" />
    </java>
  </target>

  <target name="test-poli" description="Default tests for PoLi" depends="">
    <java classname="org.mitre.opensextant.poli.PatternsOfLife" classpathref="runtime.classpath" fork="yes" >
      <arg value="-c" />
      <arg value="${config}" />
      <arg value="-u" />
      <arg value="${inputfile}" />
    </java>
  </target>

</project>
