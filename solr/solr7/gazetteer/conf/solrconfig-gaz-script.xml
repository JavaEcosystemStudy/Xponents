
    <!-- Solr Gazetter capabilities:  /addGazetteer and /tag -->
    <requestHandler name="/tag" class="org.opensextant.solrtexttagger.TaggerRequestHandler">
        <str name="field">name_tag</str>
        <bool name="matchText">true</bool>
        <str name="fq">(+name_bias:[0 TO *] AND -search_only:true AND name_type:N) OR name_type:code OR name_type:A</str>

        <lst name="defaults">
            <str name="echoParams">ALL</str>
            <str name="fl">place_id,name,cc</str>
        </lst>
    </requestHandler>

    <!-- This operation is reserved for the default OpenSextant gazetteer -->
    <requestHandler name="/addGazetteer" class="solr.UpdateRequestHandler">
        <lst name="defaults">
            <str name="update.chain">gaz-add-script</str>
            <str name="separator">&#9;</str>
            <bool name="trim">true</bool>
            <int name="skipLines">1</int>
            <bool name="header">true</bool>
            <!-- See header in MergedGazetteer input file from Gazetteer project -->
            <str name="fieldnames">id,place_id,name,,lat,lon,feat_class,feat_code,FIPS_cc,cc,ISO3_cc,adm1,adm2,adm3,,,source,,,script,name_bias,id_bias,name_type,,SplitCategory,search_only</str>
            <!-- Map name type codes -->
            <str name="f.name_type.map">abbrev:A</str>
            <str name="f.name_type.map">name:N</str>
        </lst>
    </requestHandler>


    <updateRequestProcessorChain name="gaz-add-script">
        <processor class="org.opensextant.extractors.geo.GazetteerUpdateProcessorFactory">
            <!--
            <str name="script">add-gazetteer.groovy</str>
             -->
            <lst name="params">
                <!-- Choose from: all, Basic, Wellknown, NonLatin, Rare, general (matches empty SplitCategory field)

                ALL entries, for example:
                -->
                <arr name="include_category">
                    <str>all</str>
                </arr>
                <!-- countries is a list of ISO country codes.  matches against 'cc' field.
                By default all are accepted.
                 -->
                 <!-- Testing other languages from major countries
                <arr name="countries">
                    <str>SY,CN,JP</str>
                </arr>
                -->

                <!-- Full gazetteer without Rare
                <arr name="include_category">
                    <str>Basic</str><str>Wellknown</str><str>general</str><str>NonLatin</str>
                </arr>
                -->

                <!-- Default: Latin-based names only gazetteer

                <arr name="include_category">
                    <str>Basic</str><str>Wellknown</str><str>general</str>
                </arr>
                 -->

                <!-- Lean: Basic + Well-known places
                <arr name="include_category">
                    <str>Basic</str><str>Wellknown</str>
                </arr>
                -->
            </lst>
        </processor>
    </updateRequestProcessorChain>
